{
  "info": {
    "name": "Expense Management API",
    "description": "Complete API collection for testing Expense Management System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000",
      "type": "string"
    },
    {
      "key": "adminToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "managerToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "employeeToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "managerId",
      "value": "",
      "type": "string"
    },
    {
      "key": "employeeId",
      "value": "",
      "type": "string"
    },
    {
      "key": "expenseId",
      "value": "",
      "type": "string"
    },
    {
      "key": "approvalId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Health & Setup",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            }
          }
        }
      ]
    },
    {
      "name": "2. Authentication",
      "item": [
        {
          "name": "Register Company & Admin",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('adminToken', response.token);",
                  "    console.log('Admin token saved:', response.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test Admin\",\n  \"email\": \"admin@test.com\",\n  \"password\": \"Admin123!\",\n  \"role\": \"admin\",\n  \"companyName\": \"Test Corp\",\n  \"companyCurrency\": \"USD\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Login Admin",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('adminToken', response.token);",
                  "    console.log('Admin token updated:', response.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@test.com\",\n  \"password\": \"Admin123!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "Login Manager",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('managerToken', response.token);",
                  "    console.log('Manager token saved:', response.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"manager@test.com\",\n  \"password\": \"Manager123!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "Login Employee",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('employeeToken', response.token);",
                  "    console.log('Employee token saved:', response.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"employee@test.com\",\n  \"password\": \"Employee123!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "3. User Management",
      "item": [
        {
          "name": "Create Manager",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('managerId', response.user.id);",
                  "    console.log('Manager ID saved:', response.user.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test Manager\",\n  \"email\": \"manager@test.com\",\n  \"password\": \"Manager123!\",\n  \"role\": \"manager\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/users",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users"]
            }
          }
        },
        {
          "name": "Create Employee",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('employeeId', response.user.id);",
                  "    console.log('Employee ID saved:', response.user.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test Employee\",\n  \"email\": \"employee@test.com\",\n  \"password\": \"Employee123!\",\n  \"role\": \"employee\",\n  \"managerId\": \"{{managerId}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/users",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users"]
            }
          }
        },
        {
          "name": "Get All Users",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/users",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users"]
            }
          }
        }
      ]
    },
    {
      "name": "4. Configuration (Admin)",
      "item": [
        {
          "name": "Add Manager as Approver",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"{{managerId}}\",\n  \"roleName\": \"Department Manager\",\n  \"sequence\": 1\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/config/approvers",
              "host": ["{{baseUrl}}"],
              "path": ["api", "config", "approvers"]
            }
          }
        },
        {
          "name": "Get All Approvers",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/config/approvers",
              "host": ["{{baseUrl}}"],
              "path": ["api", "config", "approvers"]
            }
          }
        },
        {
          "name": "Set Percentage Rule",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"ruleType\": \"percentage\",\n  \"ruleConfig\": {\n    \"percentage\": 50,\n    \"total_approvers\": 1\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/config/rules",
              "host": ["{{baseUrl}}"],
              "path": ["api", "config", "rules"]
            }
          }
        },
        {
          "name": "Get Approval Rules",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/config/rules",
              "host": ["{{baseUrl}}"],
              "path": ["api", "config", "rules"]
            }
          }
        }
      ]
    },
    {
      "name": "5. Expenses",
      "item": [
        {
          "name": "Submit Expense (Employee)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('expenseId', response.expense.id);",
                  "    if (response.approval_chain && response.approval_chain.length > 0) {",
                  "        pm.collectionVariables.set('approvalId', response.approval_chain[0].id);",
                  "    }",
                  "    console.log('Expense ID saved:', response.expense.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{employeeToken}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "amount",
                  "value": "150.75",
                  "type": "text"
                },
                {
                  "key": "currency",
                  "value": "USD",
                  "type": "text"
                },
                {
                  "key": "category",
                  "value": "Travel",
                  "type": "text"
                },
                {
                  "key": "description",
                  "value": "Test expense submission",
                  "type": "text"
                },
                {
                  "key": "date",
                  "value": "2025-10-04",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/expenses",
              "host": ["{{baseUrl}}"],
              "path": ["api", "expenses"]
            }
          }
        },
        {
          "name": "Get My Expenses (Employee)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{employeeToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/expenses/my",
              "host": ["{{baseUrl}}"],
              "path": ["api", "expenses", "my"]
            }
          }
        },
        {
          "name": "Get Expense by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{employeeToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/expenses/{{expenseId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "expenses", "{{expenseId}}"]
            }
          }
        },
        {
          "name": "Get All Expenses (Admin)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/expenses?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "expenses"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "6. Approvals",
      "item": [
        {
          "name": "Get Pending Approvals (Manager)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{managerToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/approvals/pending",
              "host": ["{{baseUrl}}"],
              "path": ["api", "approvals", "pending"]
            }
          }
        },
        {
          "name": "Approve Expense (Manager)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{managerToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"comments\": \"Approved - valid business expense\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/approvals/{{approvalId}}/approve",
              "host": ["{{baseUrl}}"],
              "path": ["api", "approvals", "{{approvalId}}", "approve"]
            }
          }
        },
        {
          "name": "Reject Expense (Manager)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{managerToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"comments\": \"Rejected - insufficient documentation\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/approvals/{{approvalId}}/reject",
              "host": ["{{baseUrl}}"],
              "path": ["api", "approvals", "{{approvalId}}", "reject"]
            }
          }
        },
        {
          "name": "Get Approval History",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{employeeToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/approvals/expense/{{expenseId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "approvals", "expense", "{{expenseId}}"]
            }
          }
        }
      ]
    }
  ]
}
